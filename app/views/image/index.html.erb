  <h1>Images</h1>
  <% if(@images.count > 0) %>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>ID:</td>
        <td>Name:</td>
        <td>Source Url:</td>
        <td>Type: </td>
        <td>Tags:</td>
        <td>Created: </td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.id %></td>
          <td><%= image.name %></td>
          <td><%= image.source_url %></td>
          <td><%= image.image_type %></td>
          <td>
            <ul>
            <% image.tags.each do |tag| %>
              <li><%= tag.name %></li>
            <% end %>
            </ul>
          </td>
          <td><%= image.created_at %></td>        
          <td></td>
          <td>
            <%= link_to '', edit_image_path(image), class: 'fa fa-pencil-square-o fa-3x no-decor' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <h2>No images uploaded!</h2>
  <% end %>