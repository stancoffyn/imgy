<%= form_tag('/search', method: 'get')  do %>
  <%= label_tag(:query, 'Search: ') %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<%  if(@tags.nil?) %>
  <p>There were no records found for that name</p>
<% else %>
  
    <% @images.each do |tag_name, images| %>
      Tag: <%= tag_name %>
      <ul>
        <% images.each do |image| %>
          <li>
            Name: <%= image.name %><br />
              <%= link_to image_tag("/uploads/#{image.name}", alt: image.name, class: 'image'), "/uploads/#{image.name}", target: '_blank' %><br />
              tags:
              <ul class='tags'>
              <% image.tags.each do |tag| %>
                <li><%=tag.name %></li>
              <% end %>
              </ul>
          </li>
        <% end %>
      </ul>
    <% end %>
<%end%>